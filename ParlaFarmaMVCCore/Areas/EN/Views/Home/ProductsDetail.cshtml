
@{
    ViewData["Title"] = "AboutUs";
}


<section class="page_breadcrumbs ds color parallax section_padding_top_150 section_padding_bottom_75">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h2>
                    @*@ViewBag.DictStr[99][@ViewBag.LanguageID]*@
                </h2>
            </div>
        </div>
    </div>
</section>


<section class="intro_section page_mainslider ParlaLogo color bottompadding_0 toppadding_50">
    <div class="flexslider" data-dots="true" data-nav="false">
        <ul class="slides">
            <li>
                <article class="post side-item side-md content-padding ">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="item-media rounded overflow_hidden" style="padding:35px;">
                                @*<img src="~/lib/pharma/images/Our company 1st slider.jpg" alt="">*@
                                <img src="~/lib/pharma/images/Products/Fungipar-2-Web.png" />
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="item-content">
                                <h3 class="section_header">
                                    FUNGİPAR™      hard gelatin capsule 150 mg №6
                                    @*@ViewBag.DictStr[4][@ViewBag.LanguageID]*@
                                </h3>
                                <p class="AboutUsSlidersContent">
                                    <b>FUNGİPAR™</b>      hard gelatin capsule 150 mg №6<br />
                                    <b>International  nonproprietary  name:</b> Fluconazole Fungipar is antifungal drug from the triazole group for systemic use. Fluconazole belongs to the 3rd generation of antifungal drugs and was synthesized in 1982.
                                    <span id="MoreLessP1" style="color:cornflowerblue;cursor:pointer;">More...</span>
                                    <span id="Product1" style="display:none;">
                                        It is effective in fungal diseases caused by Candida spp., Microsporum spp., Cryptoccus neoformans, Trichophyton spp., Blastomyces dermatitidis, Coccidiodes immitis and Histoplasma capsulatum. Fungipar - healthy life without fungal infections!
                                        <br />Fungipar should be prescribed by a doctor, read the instructions before use.
                                    </span>

                                    @*@ViewBag.DictStr[52][@ViewBag.LanguageID]*@
                                </p>
                            </div>
                        </div>
                    </div>
                </article>
            </li>
        </ul>
    </div>
</section>

