@section Scripts {

    <script src="~/lib/pharma/js/Parla.js"></script>
    <script>
        $(document).ready(function () {
            $("#MoreLessP1").click(function () {
                $("#MoreLessP1").hide();
                $("#Product1").show();
            });
            $("#MoreLessP2").click(function () {
                $("#MoreLessP2").hide();
                $("#Product2").show();
            });
            $("#MoreLessP3").click(function () {
                $("#MoreLessP3").hide();
                $("#Product3").show();
            });
        });
    </script>
}
