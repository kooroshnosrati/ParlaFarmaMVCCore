@using ParlaFarmaMVCCore.ViewModels
@model ParlaFarmaMVCCore.ViewModels.vmdl_ApplicationForm

@{
    ViewData["Title"] = "Applicationform";
}

<section class="page_breadcrumbs ds color parallax section_padding_top_75 section_padding_bottom_75">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h2>Job Application</h2>

            </div>
        </div>
    </div>
</section>

<section class="ls columns_padding_25 section_padding_top_50 section_padding_bottom_100">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h3 class="module-header">Job Application</h3>
                <p>Thank you for your interest in working with us. Please check below for available job opportunities that meet your criteria and send your application by filling out the Job Application Form.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 to_animate" data-animation="scaleAppear"></div>
            <div class="col-md-8 to_animate" data-animation="scaleAppear">
                <form enctype="multipart/form-data" asp-action="Applicationform" asp-controller="EN/Home" method="post" class="Application-form columns_padding_10 bottommargin_40">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-12">
                            <span>@ViewBag.ErrorMessage</span>
                        </div>
                        
                        <div class="col-sm-6">
                            <div class="form-group bottommargin_0">
                                <label asp-for="FirstName">
                                    <b>First Name </b>
                                    <span asp-validation-for="FirstName" class="required">*</span>
                                </label>
                                <input asp-for="FirstName" type="text" aria-required="true" size="30" value="" name="FirstName" id="FirstName" class="form-control" placeholder="First Name">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group bottommargin_0">
                                <label asp-for="LastName">
                                    <b>Last Name </b>
                                    <span asp-validation-for="LastName" class="required">*</span>
                                </label>
                                <input asp-for="LastName" type="text" aria-required="true" size="30" value="" name="LastName" id="LastName" class="form-control" placeholder="Last Name">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group bottommargin_0">
                                <label asp-for="Email">
                                    <b>Email address</b>
                                    <span asp-validation-for="Email" class="required">*</span>
                                </label>
                                <input asp-for="Email" type="Email" aria-required="true" size="30" value="" name="Email" id="Email" class="form-control" placeholder="Email Address">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group bottommargin_0">
                                <label for="Phone">
                                    <b>Phone </b>
                                    <span asp-validation-for="Phone" class="required">*</span>
                                </label>
                                <input asp-for="Phone" type="tel" aria-required="true" size="30" value="" name="Phone" id="Phone" class="form-control" placeholder="### ### ####">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group bottommargin_0">
                                <label for="JobPosition">
                                    <b>What position are you applying for?</b>
                                    <span asp-validation-for="JobTitle" class="required">*</span>
                                </label>
                                <br />
                                <input asp-for="JobTitle" type="text" aria-required="true" size="30" value="" name="JobTitle" id="JobTitle" class="form-control" placeholder="Job Title">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="Application-form-message form-group bottommargin_0">
                                <label for="StartDate">
                                    <b>Available start date </b>
                                    <span asp-validation-for="AvailableStartDate" class="required">*</span>
                                </label>
                                <input asp-for="AvailableStartDate" type="date" aria-required="true" size="30" value="" name="AvailableStartDate" id="AvailableStartDate" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="Application-form-message form-group bottommargin_0">
                                <label for="EmploymentStatus">
                                    <b>What is your current employment status?</b>
                                    <span asp-validation-for="EmploymentStatus" class="required">*</span>
                                </label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="EmploymentStatus" type="radio" aria-required="true" value="Employed" name="EmploymentStatus" id="EmploymentStatus">Employed
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="EmploymentStatus" type="radio" aria-required="true" value="Self-Employed" name="EmploymentStatus" id="EmploymentStatus">Self-Employed
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="EmploymentStatus" type="radio" aria-required="true" value="Unemployed" name="EmploymentStatus" id="EmploymentStatus">Unemployed
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="EmploymentStatus" type="radio" aria-required="true" value="Student" name="EmploymentStatus" id="EmploymentStatus">Student
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="Application-form-message form-group bottommargin_0">
                                <label for="ResumeSubmit">
                                    <b>How do you prefer to submit your resume?</b>
                                    <span class="required">*</span>
                                </label>
                            </div>
                            <div class="col-sm-12">
                                <input type="radio" aria-required="true" value="1" name="ResumeType" id="ResumeUploadFile" checked>Upload File
                            </div>
                            <div class="col-sm-12">
                                <input type="radio" aria-required="true" value="2" name="ResumeType" id="ResumeProvideURL">Provide URL
                            </div>
                        </div>
                        <div class="col-sm-12" style="display:none;" id="DIVResumeURL">
                            <div class="form-group bottommargin_0">
                                <label asp-for="ResumeURL">
                                    <b>Type Your ResumeURL</b>
                                    <span asp-validation-for="ResumeURL" class="required">*</span>
                                </label>
                                <br />
                                <input asp-for="ResumeURL" type="text" aria-required="true" size="30" value="" name="ResumeURL" id="ResumeURL" class="form-control" placeholder="Resume URL">
                            </div>
                        </div>
                        <div class="col-sm-12" id="DIVResumeFile">
                            <div class="Application-form-message form-group bottommargin_0">
                                <label asp-for="ResumeFile">
                                    <b>Upload your resume</b>
                                    <span asp-validation-for="ResumeFile" class="required"></span>
                                </label>
                            </div>
                            <div class="custom-file">
                                <input asp-for="ResumeFile" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>
                        </div>
                        <div class="col-sm-12 bottommargin_0">
                            <div class="Application-form-submit topmargin_10">
                                <button type="submit" id="Application_form_submit" name="Application_submit" class="theme_button color2 inverse wide_button margin_0">Send message</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-2 to_animate" data-animation="scaleAppear"></div>
        </div>
    </div>
</section>


@section Scripts{
    <script>
        $(document).ready(function () {
            $("#ResumeUploadFile").click(function () {
                $("#DIVResumeURL").hide();
                $("#DIVResumeFile").show();
            });
            $("#ResumeProvideURL").click(function () {
                $("#DIVResumeURL").show();
                $("#DIVResumeFile").hide();
            });
        });
    </script>
}
