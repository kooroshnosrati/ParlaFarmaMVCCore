@using ParlaFarmaMVCCore.ViewModels
@model ParlaFarmaMVCCore.ViewModels.vmdl_Slider

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Sliders</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data"  asp-action="Create" asp-controller="CPanel/Sliders" asp-area="" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lang" class="control-label"></label>
                <select asp-for="Lang" class="form-control" id="Lang" name="Lang">
                    <option value="1">EN</option>
                    <option value="2">AZ</option>
                    <option value="3">RU</option>
                </select>
                @*<input asp-for="Lang" class="form-control" id="Lang" name="Lang" />*@
                <span asp-validation-for="Lang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Image" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title1" class="control-label"></label>
                <input asp-for="Title1" class="form-control" id="Title1" name="Title1" />
                <span asp-validation-for="Title1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title2" class="control-label"></label>
                <input asp-for="Title2" class="form-control" id="Title2" name="Title2" />
                <span asp-validation-for="Title2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title3" class="control-label"></label>
                <input asp-for="Title3" class="form-control" id="Title3" name="Title3" />
                <span asp-validation-for="Title3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ButtonText" class="control-label"></label>
                <input asp-for="ButtonText" class="form-control" id="ButtonText" name="ButtonText" />
                <span asp-validation-for="ButtonText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ButtonLink" class="control-label"></label>
                <input asp-for="ButtonLink" class="form-control" id="ButtonLink" name="ButtonLink" />
                <span asp-validation-for="ButtonLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="CPanel/Sliders">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    <script type="text/javascript">
    // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}

